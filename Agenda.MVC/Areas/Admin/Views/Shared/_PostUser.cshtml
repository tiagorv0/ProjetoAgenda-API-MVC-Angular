@model UserPostViewModel

<div asp-validation-summary="ModelOnly" class="helper-text"></div>

<div class="input-field">
	<label asp-for="Name" ></label>
	<input asp-for="Name" class="validate" />
	<span asp-validation-for="Name" class="helper-text"></span>
</div>
<div class="input-field">
	<label asp-for="Email" ></label>
	<input asp-for="Email" class="validate" />
	<span asp-validation-for="Email" class="helper-text"></span>
</div>
<div class="input-field">
	<label asp-for="Username" ></label>
	<input asp-for="Username" class="validate" />
	<span asp-validation-for="Username" class="helper-text"></span>
</div>
<div class="input-field">
	<label asp-for="Password" ></label>
	<input asp-for="Password" class="validate" />
	<span asp-validation-for="Password" class="helper-text"></span>
</div>
<div class="form-group">
	<label asp-for="UserRoleId" class="control-label"></label>
	@Html.DropDownListFor(x => x.UserRoleId, (SelectList)ViewBag.roles, "--Selecione--")
	<span asp-validation-for="UserRoleId" class="helper-text"></span>
</div>
<hr />
<div class="form-group">
	<a asp-action="Index" class="waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Voltar</a>
	<button class="btn waves-effect waves-light light-green" type="submit" name="action">Salvar
	  <i class="material-icons right">send</i>
	</button>
</div>
